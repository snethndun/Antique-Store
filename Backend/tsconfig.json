{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",  // Ensures Node.js module resolution
    "types": ["node", "jest"]  // Add 'node' to handle Node.js types (including WebSocket)
  }
}
